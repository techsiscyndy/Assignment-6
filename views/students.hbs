<div class="main row">
    <div class="col-md-12">
        <br>
        <h2>Students</h2>
        <a href="/students/add" class="btn btn-success float-right">Add New Student</a> 
        <hr />

        <table class="table" style="background: white;">
            <thead>
                <tr>
                    <th>Student No</th>
                    <th>Full Name </th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Course ID</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                    <tr>
                        <td>{{ studentNum}}</td>
                        <td>
                            <a href="/student/{{studentNum}}">{{ firstName }} {{ lastName }}</a>
                        </td>
                        <td>
                            <a href="mailto:{{ email }}">{{ email}}</a>
                        </td>
                        <td>{{ addressStreet}}</td>
                        <td>{{ status}}</td>
                        <td><a href="/students?course={{ course }}">{{ course}}</a></td>
                        <td><a class="btn btn-danger" href="/student/delete/{{studentNum}}">Delete</a></td>
                    </tr>
                {{else}}
                    <tr>
                        <td colspan="6"> No Students</td>
                    </tr>
                {{/each}}
            </tbody>

        </table>
        
    </div>
    {{#unless students }}
    <div class="col-md-12 text-center">
        <strong> {{ message }}</strong>
    </div>
    {{/unless }}
</div>
