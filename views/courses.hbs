<div class="main row">
    <div class="col-md-12">
        <br>
        <h2>Courses</h2>
         <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
        <hr />

        <table class="table" style="background: white;">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Course Code</th>
                    <th>Course Description </th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each courses}}
                    <tr>
                        <td>{{ courseId }}</td>
                        <td>
                            <a href="/course/{{courseId}}">{{ courseCode }} {{ lastName }}</a>
                        </td>
                        <td><a href="/students?course={{courseId}}">{{ courseDescription}}</a></td>
                        <td><a class="btn btn-danger" href="/course/delete/{{courseId}}">Delete</a></td>
                    
                    </tr>
                {{else}}
                    <tr>
                        <td colspan="4"> No Course</td>
                    </tr>
                {{/each}}
            </tbody>

        </table>

        
    </div>
    {{#unless students }}
    <div class="col-md-12 text-center">
        <strong> {{ message }}</strong>
    </div>
    {{/unless }}
</div>